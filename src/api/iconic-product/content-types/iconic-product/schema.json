{
  "kind": "collectionType",
  "collectionName": "iconic_products",
  "info": {
    "singularName": "iconic-product",
    "pluralName": "iconic-products",
    "displayName": "IconicProduct"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "subtitle": {
      "type": "string"
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "description": {
      "type": "richtext"
    },
    "size": {
      "type": "json"
    },
    "image": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": true
    },
    "thumbnail": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false,
      "required": true
    },
    "original_price": {
      "type": "decimal"
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    }
  }
}
